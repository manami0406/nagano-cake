<div class="container">
  <div class="row">
    <h1>会員一覧</h1>
  </div>
  
  <div class="row mt-5">
    <table class="table">
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to admin_customer_path(customer.id) do %><%= customer.last_name %> <%= customer.first_name %><% end %></td>
      <td><%= customer.email %></td>
      <td><%= customer.is_deleted ? '退会':'有効' %></td>
    </tr>
    <% end %>
  </table>
  </div>
</div>