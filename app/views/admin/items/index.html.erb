<div class= "container">
  <div class="row">
    <span class="h3">商品一覧</span>
    <span class= "ml-5"><%= link_to '+', new_admin_item_path, class:"ml-5 btn btn-light rounded-circle" %></span>
  </div>
  
  <div class="row mt-4">
    <table class="table">
      <tr>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>販売ステータス</th>
      </tr>
      <% @items.each do |item| %>
      <tr>
        <td><%= link_to admin_item_path(item.id) do %><%= item.name %><% end %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td><%= item.is_active %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>