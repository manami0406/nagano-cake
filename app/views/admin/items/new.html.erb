<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h3>商品新規登録</h3>
    </div>
  </div>
    
  <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
  <div class="row mt-5">
    <table>
      <tr><th>商品画像</th><td><%= f.file_field :image, accept: "image/*" %></td></tr>
　　　<tr><th>商品名</th><td><%= f.text_field :name %></td></tr>
　　　<tr><th>商品説明</th><td><%= f.text_area :introduction, style: "width:80%", rows: "5" %></td></tr>
　　　<tr><th>ジャンル選択</th><td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td></tr>
　　　<tr><th>税抜価格</th><td><%= f.number_field :price %></td></tr>
　　　<tr><th>販売ステータス</th><td> <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %></td></tr>
    </table>
    <div class="button text-center">  
      <%= f.submit '新規登録', class:"btn btn-sm btn-success" %>
    </div>
  </div>
  <% end %>
</div>