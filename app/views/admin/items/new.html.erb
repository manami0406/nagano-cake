<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h3>商品新規登録</h3>
  
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
      <h4>商品画像</h4>
        <%= f.file_field :image, accept: "image/*" %>
      <h4>商品名</h4>
        <%= f.text_field :name %>
      <h4>商品説明</h4>
        <%= f.text_area :introduction %>
      <h4>ジャンル選択</h4>
        <%= f.select :genre_id, ['1:ケーキ', '2:プリン'] %>
      <h4>税抜価格</h4>
        <%= f.number_field :price %>
      <h4>販売ステータス</h4>
        <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
      <div class="button">  
      <%= f.submit '新規登録', class:"btn btn-sm btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>