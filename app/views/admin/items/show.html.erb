<div class= "container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h1>商品詳細</h1>
      <img class="image">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x300" %>
      <% else %>
        <%= image_tag 'no-image', size: "300x300" %>
      <% end %>
      </img>
  
      <h4>商品名</h4>
        <%= @item.name %>
      <h4>商品説明</h4>
        <%= @item.introduction %>
      <h4>ジャンル</h4>
        <%= @item.genre.name %>
      <h4>価格</h4>
        <%= @item.price %>
      <h4>販売ステータス</h4>
        <%= @item.is_active %>
    
      <div><%= link_to '編集する', edit_admin_item_path, class:"btn btn-sm btn-success" %></div>
    </div>
  </div>
</div>