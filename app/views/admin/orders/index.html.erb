<div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-md-10 mt-4">
      <h2>注文履歴一覧</h2>
        <table class="table mt-4">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to admin_order_path(order.id) do %><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %><% end %></td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td><% @sum  = 0 %>
                  <% order.order_details.all.each do |order_detail|  %>
                    <% @amount = order_detail.amount  %>
                    <% @sum += @amount %>
                  <% end %>
                  <%= @sum %></td>
            <td><%= order.is_order_i18n %></td>
          </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>