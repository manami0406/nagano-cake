<div class= "container">
  <div class="row">
    <div class="h3">管理者ログイン</div>
      <div class= "form-horizontal" role="form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class= "form-group">
          <div class= "col-xs-2">
          <%= f.label :メールアドレス %>
          </div>
          <div class="col-xs-10">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %>
          </div>
        
          <div class="col-xs-2">
          <%= f.label :パスワード %>
          </div>
          <div class="col-xs-10">
          <%= f.password_field :password, autocomplete: "current-password", size: 40 %>
          </div>
        </div>


      <div class="actions">
        <%= f.submit "ログイン", class:"btn btn-sm btn-primary " %>
      </div>
      <% end %>

    <%= render "admin/shared/links" %>
    </div>
  </div>
</div>