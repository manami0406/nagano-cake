<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <span>名前(性)<%= f.text_field :last_name %>(名)<%= f.text_field :first_name %></span>
  </div>
  
  <div class="field">
    <span>フリガナ(セイ)<%= f.text_field :last_name_kana %>(メイ)<%= f.text_field :first_name_kana %></span>
  </div>

  <div class="field">
    <span>メールアドレス<%= f.email_field :email, autofocus: true, autocomplete: "email" %></span>
  </div>
  
  <div class="field">
    <span>郵便番号（ハイフンなし）<%= f.text_field :postal_code %></span>
  </div>
  
  <div class="field">
    <span>住所<%= f.text_field :address %></span>
  </div>
  
  <div class="field">
    <span>電話番号(ハイフンなし）<%= f.text_field :telephone_number %></span>
  </div>

  <div class="field">
    <span>パスワード
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %></span>
  </div>

  <div class="field">
    <span>パスワード(確認用)
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %></sapn>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<h4><%= link_to "こちら", new_customer_session_path %>からログインしてください。</h4>
