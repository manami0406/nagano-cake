<h1>配送先登録/一覧</h1>

<%= form_with model: @address, url: addresses_path, method: :post do |f| %>
<div class= "new">
  郵便番号(ハイフンなし)<%= f.text_field :postal_code %>
</div>
<div class= "new">
  住所<%= f.text_field :address %>
</div>
<div class= "new">
  宛名<%= f.text_field :name %>
</div>
<%= f.submit '新規登録' %>
<% end %>


<div class= "all">
  <% @addresses.each do |address| %>
    郵便番号
    <%= address.postal_code %>
    住所
    <%= address.address %>
    宛名
    <%= address.name %>
  <% end %>
</div>