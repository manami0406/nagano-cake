<h1>配送先登録/一覧</h1>

<%= form_with model: @address, url: addresses_path, method: :post do |f| %>
<div class= "new">
  郵便番号(ハイフンなし)<%= f.text_field :postal_code %>
</div>
<div class= "new">
  住所<%= f.text_field :address %>
</div>
<div class= "new">
  宛名<%= f.text_field :name %>
</div>
<%= f.submit '新規登録' %>
<% end %>


<div class= "all">
  <% @addresses.each do |address| %>
    <table>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to '編集する', edit_address_path(address.id) %>
          <%= link_to '削除する', address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
    </table>
  <% end %>
</div>