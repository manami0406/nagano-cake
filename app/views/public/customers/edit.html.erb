<div class="container">
  <div class="row">
  <h1>会員情報編集</h1>

  <% if @customer.errors.any? %>
    <%= @customer.errors.count %>件のエラーが発生しました
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  </div>
  <div class="row">
  <%= form_with model: @customer, url: customer_path do |f| %>
    <table>
        <tr><th>氏名</th><td><%=f.text_field :last_name %><%= f.text_field :first_name %></td></tr>
　　　　<tr><th>フリガナ</th><td><%=f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td></tr>
　　　　<tr><th>郵便番号</th><td><%= f.text_field :postal_code %></td></tr>
　　　　<tr><th>住所</th><td><%= f.text_field :address %></td></tr>
　　　　<tr><th>電話番号</th><td><%= f.text_field:telephone_number %></td></tr>
　　　　<tr><th>メールアドレス</th><td><%= f.text_field :email %></td></tr>
      </table>
  </div>
  
  <div class="row mt-4">
    <%= f.submit '編集内容を保存', class:"mr-4 btn btn-success" %>
    <%= link_to '退会する', cancel_path, class:"btn btn-danger" %>
  </div>
  <% end %>
</div>