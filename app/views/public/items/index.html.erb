<div class="container">
  <div class="row mt-5">
    <h2>商品一覧</h2><h3 class="pl-3">(全<%= @items.count %>件)</h3>
  </div>
  <div class="row mt-4">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <div class="item-image">
          <% if item.image.attached? %>
            <%= image_tag item.image, size: "200x150" %>
          <% else %>
            <%= image_tag 'no-image', size: "200x150" %>
          <% end %>
        </div>
        <div class="item-name">
          <%= link_to item_path(item.id) do %><%= item.name %><% end %></div>
        <div class="item-price">¥<%= item.price %></div>
      </div>
    <% end %>
  </div>
</div>
      
      