<div class="container">
  <div class="row">
    <h4>新規会員登録</h4>

    <% if @customer.errors.any? %>
      <%= @customer.errors.count %>件のエラーが発生しました
      <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
  </div>
  
  <div class="row">
    <div class="col-12 col-md-8 pull-left">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      
      <table>
        <tr><th><%= f.label :名前 %></th><td>(姓)<%= f.text_field :last_name %>(名)<%= f.text_field :first_name %></td></tr>
　　　  <tr><th><%= f.label :フリガナ %></th><td>(セイ)<%= f.text_field :last_name_kana %>(メイ)<%= f.text_field :first_name_kana %></td></tr>
　　　  <tr><th><%= f.label :メールアドレス %></th><td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td></tr>
　　　  <tr><th><%= f.label :郵便番号 %>(ハイフンなし)</th><td><%= f.text_field :postal_code %></td></tr>
　　　  <tr><th><%= f.label :住所 %></th><td><%= f.text_field :address %></td></tr>
　　　  <tr><th><%= f.label :電話番号 %>(ハイフンなし)</th><td><%= f.text_field :telephone_number %></td></tr>
　　　  <tr><th><%= f.label :パスワード %>
                <% if @minimum_password_length %>
                <em>(6文字以上)</em>
                <% end %></th>
                <td><%= f.password_field :password, autocomplete: "new-password" %></td></tr>
        <tr><th><%= f.label :パスワード %>(確認用)</th>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td></tr>
      </table>

      <div class="mx-auto text-center mt-4">
        <%= f.submit "新規登録", class:"btn btn-success text-center" %>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="row mt-4">
    <h4>既に登録済みの方</h4>
    <div class="mt-5">
      <%= link_to 'こちら', new_customer_session_path %>からログインしてください。
    </div>
  </div>
</div>
