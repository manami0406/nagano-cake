<div class="container">
  <div class="row">
    <h4>新規会員登録</h4>

    <% if @customer.errors.any? %>
      <%= @customer.errors.count %>件のエラーが発生しました
      <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
  </div>
  
  <div class="row">
    <div class="col-12 col-md-8 pull-left">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
  
      <div class="field">
        <span class="col-4">
          <%= f.label :名前 %>
        </span>
        <span class="col-8">
          (姓)<%= f.text_field :last_name %>
          (名)<%= f.text_field :first_name %>
        </span>
      </div>
　
　    <div class="field">
　      <span class="col-4">
　        <%= f.label :フリガナ %>
　      </span>
　      <span class="col-8">
　        (セイ)<%= f.text_field :last_name_kana %>
　        (メイ)<%= f.text_field :first_name_kana %>
　      </span>
　    </div>
　
      <div class="field">
        <%= f.label :メールアドレス %>
        (ハイフンなし)<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
  
      <div class="field">
        <%= f.label :郵便番号 %>
        <%= f.text_field :postal_code %>
      </div>
  
      <div class="field">
        <%= f.label :住所 %>
        <%= f.text_field :address %>
      </div>
  
      <div class="field">
        <%= f.label :電話番号 %>
        (ハイフンなし)<%= f.text_field :telephone_number %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        (確認用)<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
  </div>



  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h5>既に登録済みの方</h5>
<%= link_to 'こちら', new_customer_session_path %>からログインしてください。

