<div class="container">
   <div class="row">
      <div class="mx-auto col-11 col-md-10 mt-4">
        <h2>ログイン</h2>
        <h5 class="mt-5">会員の方はこちらからログイン</h5>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="text-center">
          <tr><th><%= f.label :メールアドレス %></th><td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td></tr>
　　　　  <tr><th><%= f.label :パスワード %></th><td><%= f.password_field :password, autocomplete: "current-password" %></td></tr>
        </table>

          <!--<% if devise_mapping.rememberable? %>-->
          <!--  <div class="field">-->
          <!--    <%= f.check_box :remember_me %>-->
          <!--    <%= f.label :remember_me %>-->
          <!--  </div>-->
          <!--<% end %>-->

        <div class="actions text-center">
          <%= f.submit "ログイン", class:"btn btn-sm btn-primary" %>
        </div>
        <% end %>

        <h5 class="mt-5">会員登録がお済みでない方</h5>
        <div class="text-center mt-2">
          <%= link_to 'こちら', new_customer_registration_path %>から新規登録を行ってください。
        </div>
      </div>
   </div>
</div>
  